                <local:WaveProgress Margin="5" Progress="{Binding Progress}"/>
                <local:WaveProgress Margin="5" Progress="{Binding Progress}"/>
                <local:WaveProgress Margin="5" Progress="{Binding Progress}"/>
                <local:WaveProgress Margin="5" Progress="{Binding Progress}"/>
                <local:WaveProgress Margin="5" Progress="{Binding Progress}"/>
                <local:WaveProgress Margin="5" Progress="{Binding Progress}"/>
                <local:WaveProgress Margin="5" Progress="{Binding Progress}"/>
                <local:WaveProgress Margin="5" Progress="{Binding Progress}"/>
                <local:WaveProgress Margin="5" Progress="{Binding Progress}"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
